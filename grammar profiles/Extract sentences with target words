import re

texts = open('dta_cleaned.txt', 'r', encoding='utf8').read().split('\n')

dta_targets = open('dta_targets.txt', 'w', encoding='utf8') # for sentences from DTA with target words

# abbauen
sents_dta_abbauen = []

for i in range(0, len(texts)):
    sent = texts[i]
    if bool(re.findall('abbauen | abgebaut', sent)) == True: # searshing for all the forms of a target word separated with |
        sents_dta_abbauen.append(sent)
        i += 1

for i in range(0, len(sents_dta_abbauen)):
    dta_targets.write(sents_dta_abbauen[i] + '\n') # writing sentences into a txt.file with a target word with \n sep
